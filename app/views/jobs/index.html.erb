<%- model_class = Job -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:territory_id) %></th>
      <th><%= model_class.human_attribute_name(:jobtype_id) %></th>
      <th><%= model_class.human_attribute_name(:server_id) %></th>
      <th><%= model_class.human_attribute_name(:is_running) %></th>
      <th><%= model_class.human_attribute_name(:is_finished_correctly) %></th>
      <th><%= model_class.human_attribute_name(:version) %></th>
      <th><%= model_class.human_attribute_name(:fail_reason) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @jobs.each do |job| %>
      <tr>
        <td><%= link_to job.territory.name, job_path(job) %></td>
        <td><%= job.jobtype.name %></td>
        <td><%= job.server.name %></td>
        <td><%= job.is_running %></td>
        <td><%= job.is_finished_correctly %></td>
        <td><%= job.version %></td>
        <td><%= job.fail_reason %></td>
        <td><%= job.created_at %></td>
        <td>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      job_path(job),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>