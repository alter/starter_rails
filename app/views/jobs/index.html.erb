<h1>Listing jobs</h1>

<table>
  <thead>
    <tr>
      <th>Territory</th>
      <th>Jobtype</th>
      <th>Server</th>
      <th>Is running</th>
      <th>Is finished correctly</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @jobs.each do |job| %>
      <tr>
        <td><%= job.territory %></td>
        <td><%= job.jobtype %></td>
        <td><%= job.server %></td>
        <td><%= job.is_running %></td>
        <td><%= job.is_finished_correctly %></td>
        <td><%= link_to 'Show', job %></td>
        <td><%= link_to 'Edit', edit_job_path(job) %></td>
        <td><%= link_to 'Destroy', job, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

